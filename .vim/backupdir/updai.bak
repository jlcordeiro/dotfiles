#!/bin/sh

if [ "$1" != "--no-tar" -a "$2" != "--no-tar" ]
then
	echo "Creating tar.gz file..."
	tar -zcf dai$(date '+%F_%H%M%S').tar.gz ~/Dropbox/brisa/src/*.cpp ~/Dropbox/brisa/src/*.h > /dev/null 2>&1
fi

dropbox start

a=`dropbox status`
echo "Updating... "
while [ "$a" != "Idle" ]
do
dropbox status
sleep 1
a=`dropbox status`
done

if [ "$1" != "--dont-stop" -a "$2" != "--dont-stop" ]
then
	dropbox stop
fi

#include <cmath>
#include <iostream>
#include <cstdlib>

using namespace std;

int main()
{
	unsigned int d;//number of digits
	unsigned char *a;
	unsigned int j, n, q, z, t;
        int i;
        double p;
    
    cout << "Enter the No: ";
    cin >> n;
    
    p = 0.0; //calculate the number of digits required
    for(j = 2; j <= n; j++)
    	p += log10(j);
    	
    d = (int)p + 1;
    a = new unsigned char[d];
    
    if (!a)
    {
		cout << "Could not allocate memory!!!";
		exit(0);
    }
    
    for (i = 1; i < d; i++)
    	a[i] = 0; //initialize
    a[0] = 1;
    
    p = 0.0;
    for (j = 2; j <= n; j++)
    {
		q = 0;//initialize remainder to be 0
        p += log10(j);
        z = (int)p + 1;
        for (i = 0; i <= z/*NUMDIGITS*/; i++)
        {
	        t = (a[i] * j) + q;
            q = (t / 10);
            a[i] = (char)(t % 10);
        }
    }
    
    cout << endl << ": ";
    // the fact is stored in reverse..
    
    unsigned long int soma = 0;
    
    for( i = d -1; i >= 0; i--){
//     	cout << (int)a[i];

        soma += (int)a[i];
    }
    
    cout << soma;
    cout << endl;


    delete []a;
    	
    return 0;
    
}
